@model VillagerViewModel
@{
    ViewData["Title"] = "Geekseat Witch Saga";

}


<div class="text-center">
    <h1 class="display-4 mb-5">
        Find the average number of people the witch killed
    </h1>


    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row border p-3 mb-3">
            <div class="col-12 font-weight-bold">Person A</div>
            <div class="form-inline col-md-6">
                <label asp-for="@Model.Villagers[0].AgeOfDeath" class="pr-3"> Age of death</label>
                <input  type="number"  asp-for="@Model.Villagers[0].AgeOfDeath" class="form-control" />
                <span asp-validation-for="@Model.Villagers[0].AgeOfDeath" class="text-danger"></span>
            </div>
            <div class="form-inline col-md-6 d-flex justify-content-end">
                <label asp-for="@Model.Villagers[0].YearOfDeath" class="pr-3">Year of Death</label>
                <input type="number" asp-for="@Model.Villagers[0].YearOfDeath" class="form-control" />
                <span asp-validation-for="@Model.Villagers[0].YearOfDeath" class="text-danger"></span>
            </div>
        </div>
        <div class="row border p-3 mb-5">
            <div class="col-12 font-weight-bold">Person B</div>
            <div class="form-inline col-md-6">
                <label asp-for="@Model.Villagers[1].AgeOfDeath" class="pr-3">Age of death</label>
                <input type="number" asp-for="@Model.Villagers[1].AgeOfDeath" class="form-control" />
                <span asp-validation-for="@Model.Villagers[1].AgeOfDeath" class="text-danger"></span>
            </div>
            <div class="form-inline col-md-6 d-flex justify-content-end">
                <label asp-for="@Model.Villagers[1].YearOfDeath" class="pr-3">Year of Death</label>
                <input type="number" asp-for="@Model.Villagers[1].YearOfDeath" class="form-control" />
                <span asp-validation-for="@Model.Villagers[1].YearOfDeath" class="text-danger"></span>
            </div>
        </div>
        <div class=" col-12">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>

    @if (@Model.Average < 0)
    {
        <div class="mt-5">
            <p>The result is invalid <input disabled="disabled" type="number" asp-for="@Model.Average" class="mx-3" /></p>
        </div> }
    else if (@Model.Average == 0) { }
    else
    {
        <div class="mt-5">
            <p>Person A born on year <input disabled="disabled" type="number" asp-for="@Model.Villagers[0].YearOfBirth" class="mx-3" /><span asp-validation-for="@Model.Villagers[0].YearOfBirth" class="text-danger"></span><span>number of people killed on this year is<input disabled="disabled" asp-for="@Model.NumberOfPeopleKilledA" class="mx-3" /></span></p>
            <p>Person B born on year <input disabled="disabled" type="number" asp-for="@Model.Villagers[1].YearOfBirth" class="mx-3" /><span asp-validation-for="@Model.Villagers[1].YearOfBirth" class="text-danger"></span><span>number of people killed on this year is<input disabled="disabled" asp-for="@Model.NumberOfPeopleKilledB" class="mx-3" /></span></p>
            <p>So the average is<input disabled="disabled" asp-for="@Model.Average" class="mx-3" /></p>
        </div>      
     }


</div>

